# Database Configuration (required)
CONNECTION_STRING="Host=localhost;Port=5432;Database=LotteryApp;Username=postgres;Password=postgres"

(required)
# Super Admin Credentials (First-time setup)
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=ChangeThisInProduction123!

# Environment
ASPNETCORE_ENVIRONMENT=Development

(required)
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ISSUER=LotteryApp
JWT_AUDIENCE=LotteryAppUsers
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_TOKEN_DAYS=7

(required)
# CORS
CLIENT_HOST=http://localhost:5173

# Email Service (if applicable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@lotteryapp.com

# Application URLs
API_BASE_URL=http://localhost:5000
